<h3><%=t(".reply_title")%></h3>
<%= form_for(Reply.new) do |form| %>
<%= form.error_messages %>
<%= form.hidden_field :user_id, :value => form.object.user_id|| current_user.try(:id) %>
<%= form.hidden_field :feedback_id, :value => form.object.feedback_id || feedback.try(:id) %>
<%= form.hidden_field :reply_id %>
<%= form.text_area :content, :class => "xheditor-simple {skin:'nostyle'}", :style => 'height: 150px;' %>
<br />
<%= form.submit t("buttons.reply") %>
<% end %>
